@model Employee

@{
    ViewBag.Title = "Details";
}

<h3>Employee Details</h3>
<div>
    <table>            
            <tr>
                <td>First Name</td>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <td>Email Id</td>
                <td>@Model.EmailId</td>
            </tr>
            <tr>
                <td>Age</td>
                <td>@Model.Age</td>
            </tr>
        </table>
        <br/>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to Search</a>
</div>
